<resources>
    <!-- Launcher theme. -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
    </style>

    <!-- Common style for text -->
    <style name="CommonTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Style for medium text -->
    <style name="MediumTextStyle" parent="@style/CommonTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Style for large text -->
    <style name="LargeTextStyle" parent="@style/CommonTextStyle">
        <item name="android:textSize">40sp</item>
    </style>


    <!-- Style for overflow menu button -->
    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/white</item>
    </style>

</resources>
